    </ItemGroup>
    <PropertyGroup>
      <UpdatedContent>@(AssemblyInfoContent)</UpdatedContent>
      <UpdatedContent>$([System.Text.RegularExpressions.Regex]::Replace($(UpdatedContent), 'AssemblyVersion\(&quot;.*?&quot;\)', 'AssemblyVersion(&quot;$(VersionWithBuild)&quot;)'))</UpdatedContent>
      <UpdatedContent>$([System.Text.RegularExpressions.Regex]::Replace($(UpdatedContent), 'AssemblyFileVersion\(&quot;.*?&quot;\)', 'AssemblyFileVersion(&quot;$(VersionWithBuild)&quot;)'))</UpdatedContent>
    </PropertyGroup>
    <WriteLinesToFile File="$(AssemblyInfoFile)" Lines="$(UpdatedContent)" Overwrite="true" />
